#!/bin/bash

TANK=/Volumes/tank

function rclone_dirs() {
    echo rclone sync "$@"
    rclone sync -v                              \
        --retries 2                             \
        --fast-list                             \
        --transfers 4                           \
        --delete-during                         \
        --delete-excluded                       \
        --exclude '.DocumentRevisions-V100/**'  \
        --exclude '.Spotlight-V100/**'          \
        --exclude '.TemporaryItems/**'          \
        --exclude '.Trash/**'                   \
        --exclude '.Trashes/**'                 \
        --exclude '.Trashes'                    \
        --exclude '.apdisk'                     \
        --exclude '.fseventsd/**'               \
        --exclude '.zfs/**'                     \
        "$@"
}

function rclone_it() {
    test -d "$TANK/$1" && rclone_dirs "$TANK/$1" crypt-${1}:
}

function b2_sync_dirs() {
    echo backblaze-b2 sync "$@"
    backblaze-b2 sync --keepDays 722 --replaceNewer     \
        --excludeRegex '.*\.DocumentRevisions-V100.*'   \
        --excludeRegex '.*\.Spotlight-V100.*'           \
        --excludeRegex '.*\.TemporaryItems.*'           \
        --excludeRegex '.*\.Trash.*'                    \
        --excludeRegex '.*\.apdisk'                     \
        --excludeRegex '.*\.fseventsd.*'                \
        --excludeRegex '.*\.zfs.*'                      \
        "$@"
}

function b2_sync_it() {
    test -d "$TANK/$1" && b2_sync_dirs "$TANK/$1" b2://jwiegley-$1
}

case ${1:-all} in
  Documents) rclone_it Documents ;;
  Desktop)   rclone_it Desktop ;;

  Nasim)     test -d "$TANK/Nasim" && rclone_dirs "$TANK/Nasim" crypt-Nasim: ;;
  Misc)      test -d "$TANK/Backups/Misc" && rclone_dirs "$TANK/Backups/Misc" crypt-Backups-Misc: ;;
  Servers)   test -d "$TANK/Backups/Servers" && rclone_dirs "$TANK/Backups/Servers" crypt-Backups-Servers: ;;

  Home)
    test -d "$TANK/Home" && \
    rclone_dirs \
        --exclude '.config/recoll/xapiandb/**' \
        "$TANK/Home"      "crypt-Backups-System-Home:" ;;
  Library)
    test -d "$TANK/Library" && \
    rclone_dirs --exclude 'Application Support/Path Finder/**' \
        --exclude 'Application Support/DEVONthink Pro 2/**' \
        --exclude 'Application Support/Dash/**' \
        "$TANK/Library"   "crypt-Backups-System-Library:" ;;

  Messages)
    test -d "$TANK/Messages" && \
    rclone_dirs --exclude 'dovecot.index*' \
        "$TANK/Messages" "crypt-Messages:" ;;

  Databases) b2_sync_it Databases ;;
  Photos)    b2_sync_it Photos ;;
  Pictures)  b2_sync_it Pictures ;;
  Audio)     b2_sync_it Audio ;;
  Games)     b2_sync_it Games ;;

  src)
    test -d "$TANK/src" && \
    b2_sync_dirs \
        --excludeRegex 'nix/nixpkgs/.*' \
        --excludeRegex '.*/dist/.*' \
        --excludeRegex '.*/\.direnv/.*' \
        --excludeRegex '.*\.vo' \
        --excludeRegex '.*\.v.d' \
        --excludeRegex '.*\.aux' \
        --excludeRegex '.*\.glob' \
        "$TANK/src" b2://jwiegley-src ;;

  Media)
    test -d "$TANK/Media" && \
    b2_sync_dirs \
        --excludeRegex 'Linux/(CentOS|Ubuntu)/Media/.*' \
        "$TANK/Media" b2://jwiegley-Media ;;

  Movies)
    test -d "$TANK/Movies" && \
    b2_sync_dirs \
        --excludeRegex '.*(DSSS17|OPLSS|Introductory).*' \
        "$TANK/Movies" b2://jwiegley-Movies ;;

  all)
    for i in      \
        Documents \
        Messages  \
        Desktop   \
        Home      \
        Library   \
        src       \
        Databases \
        Photos    \
        Pictures  \
        Audio     \
        Games     \
        Media     \
        Misc      \
        Servers   \
        Movies    \
        Nasim
    do
        b2-sync $i
    done
    ;;
esac
