#!/bin/bash

set -euo pipefail
IFS=$'\n\t'

ssh hermes true
quickping $HERMES_ETHERNET && \
    push -h vulcan hermes || echo "Could not push to hermes"

ssh athena true
quickping $ATHENA_ETHERNET && \
    push -h vulcan athena || echo "Could not push to athena"
quickping $ATHENA_ETHERNET && \
    push -h vulcan tank || echo "Could not push to tank"

# reindex-mail
# recollindex
