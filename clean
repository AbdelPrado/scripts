#!/bin/bash

dryrun=false
if [[ $1 == "-n" ]]; then
    dryrun=true
    shift 1
fi

find "$@" \( \( -type f                         \
             \( -name '.ghc.*'                  \
             -o -name '*.hi'                    \
             -o -name 'cabal.project.local*'    \
             \)                                 \
          \)                                    \
       -o \( -type d                            \
             \( -name '.ghc.*'                  \
             -o -name 'dist'                    \
             -o -name 'dist-newstyle'           \
             \)                                 \
          \)                                    \
       -o \( -type f                            \
             \( -name '*.agdai'                 \
             \)                                 \
          \)                                    \
       -o \( -type d                            \
             \( -name 'MAlonzo'                 \
             \)                                 \
          \)                                    \
       -o \( -type f                            \
             \( -name '.*.aux'                  \
             -o -name '*.glob'                  \
             -o -name '*.v.d'                   \
             -o -name '*.vio'                   \
             -o -name '*.vo'                    \
             -o -name '*.vok'                   \
             -o -name '*.vos'                   \
             -o -name '*.cma'                   \
             -o -name '*.cmi'                   \
             -o -name '*.cmo'                   \
             -o -name '*.cmx'                   \
             -o -name '*.cmxa'                  \
             -o -name '*.cmxs'                  \
             \)                                 \
          \)                                    \
       -o \( -type d                            \
             \( -name '.coq-native'             \
             \)                                 \
          \)                                    \
       -o \( -type l                            \
             \( -name 'result'                  \
             -o -name 'result-*'                \
             \)                                 \
          \)                                    \
       -o \( -type f                            \
             \( -name '.envrc.cache'            \
             \)                                 \
          \)                                    \
       -o \( -type d                            \
             \( -name '.vagrant'                \
             \)                                 \
          \)                                    \
       -o \( -type d                            \
             \( -name '.cargo-home'             \
             -o -name 'target'                  \
             \)                                 \
          \)                                    \
       -o \( -type f                            \
             \( -name '*~'                      \
             \)                                 \
          \)                                    \
       \)                                       \
    -print0 |                                   \
    if [[ $dryrun == true ]]; then              \
        parallel -0 ls -ld;                     \
    else                                        \
        parallel -0 --xargs rm -fr;             \
    fi
