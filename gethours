#!/bin/sh

org2tc /Users/johnw/doc/Tasks/todo.txt \
    | ledger -f - --day-break print complete > /tmp/fpcomplete.dat
org2tc /Users/johnw/doc/Tasks/FPComplete.txt \
    | ledger -f - --day-break print >> /tmp/fpcomplete.dat

ledger -f /tmp/fpcomplete.dat --weekly \
    -p "$1" -n --columns=62 --day-break reg

#rm -f /tmp/fpcomplete.dat

exit 0
