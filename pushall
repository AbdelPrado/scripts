#!/bin/bash

if [[ -d /Volumes/Vault/Projects ]]; then
    pushme "$@" vault &
fi

if [[ -d "/Volumes/Macintosh HD 1/Users/johnw/Projects" ]]; then
    pushme "$@" clone &
fi

if [[ -d "/Volumes/My Passport/Vault" ]]; then
    pushme "$@" passport &
fi

if [[ -d "/Volumes/mybook/Projects" ]]; then
    pushme "$@" mybook &
fi

if quickping 192.168.1.133; then
    pushme "$@" titan &
fi

if [[ $(hostname) = "Vulcan.local" ]] && quickping 192.168.1.66; then
    pushme "$@" hermes &
fi

if [[ $(hostname) = "Vulcan.local" ]] && quickping 192.168.9.116; then
    pushme "$@" maia &
fi

wait

### pushall ends here
