#!/bin/bash

find ~/src/ \( -name dist                               \
            -o -path '*/cabal-dev/lib'                  \
            -o -path '*/cabal-dev/doc' \) -type d       \
            \! -path '*/pushme/dist'                    \
    | xargs /bin/rm -fr

update -a

pushme "$@"

if [[ $(hostname) == "vulcan.local" ]]; then
    pushme titan
    pushme -Q storage
fi

### pushall ends here
