#!/bin/bash

#if [[ "$1" != "-nv" ]]; then
#    exit 0
#fi

rsync "$@" -ah --exclude=/.Trash/ --delete --ignore-errors \
    --exclude=/.screenrc --exclude=/.local/ --exclude=/.cache/ \
    --exclude='/.Apple*' \
    ~/ johnw@titan:./

volcopy "$@" -h --ignore-errors \
    --exclude=/Archives/Games/ \
    --exclude=/Backups/ \
    --exclude=/BSDpool/ \
    --exclude=/Database/ \
    --exclude=/Downloads/ \
    --exclude=/Home/ \
    --exclude=/Mail/ \
    --exclude=/Movies/ \
    --exclude=/Music/ \
    --exclude=/Products/ \
    --exclude=/Public/ \
    --exclude=/Torrents/ \
    --exclude=/MANIFEST.txt \
    --exclude=/rpool/ \
    /Volumes/RAID/$i/ johnw@titan:/data/$i/
