#!/bin/bash

pidgrep -q Emacs || runemacs

if [[ $(hostname) =~ [Vv]ulcan ]]; then
    pidgrep -q ERC || runemacs --alt
    # open /System/Applications/Mail.app
fi

exec open                                       \
    /Applications/Drafts.app                    \
    /Applications/Fantastical.app               \
                                                \
    /Applications/Firefox.app                   \
    /Applications/Safari.app                    \
    /Applications/Brave\ Browser.app            \
    /Applications/Notion.app                    \
    /Applications/Asana.app                     \
                                                \
    /Applications/Soulver\ 3.app                \
    /Applications/iTerm.app                     \
                                                \
    /Applications/Slack.app                     \
    /Applications/Discord.app                   \
    /Applications/Signal.app                    \
    /Applications/Telegram.app                  \
    /Applications/WhatsApp.app                  \
    /Applications/Zulip.app                     \
    /System/Applications/Messages.app
