#!/bin/bash

open ~/Library/Mirrors/Hackage.sparsebundle
sleep 5

if quickping hackage.haskell.org; then
    simple-mirror --from="http://hackage.haskell.org" --to="/Volumes/Hackage"
    cabal update
fi

