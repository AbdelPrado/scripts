#!/bin/bash

if [[ "$1" == "-a" || "$1" == "--all" ]]; then
    if ! running fetchmail; then
        getmail &
    fi
fi

cabal-update $1
brew-update $1

if [[ "$1" == "--all" ]]; then
    rebuild-hoogle &
fi

if [[ "$1" == "--all" || "$1" == "-a" ]]; then
    git all fetch ~/Archives/ ~/Projects/ ~/Contracts/ &
fi

wait

exit 0
