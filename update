#!/bin/bash

if [[ "$1" == "-a" || "$1" == "--all" ]]; then
    if ! running fetchmail; then
        getmail &
    fi
fi

start-hackage
brew-update $1

if [[ "$1" == "--all" || "$1" == "-a" ]]; then
    find ~/Contracts/ ~/Projects/                                          \
        -name .git -type d | while read dir; do                            \
            parent=$(dirname "$dir"); (cd "$parent"; git remote update);   \
        done > /dev/null 2>&1
fi

wait

exit 0
