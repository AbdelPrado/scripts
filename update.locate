#!/bin/bash

if [[ ! -d $HOME/.cache/locate ]]; then
    mkdir -p $HOME/.cache/locate
fi

export LC_ALL='C'

updatedb \
    --localpaths=$HOME \
    --output=$HOME/.cache/locate/home.db

sudo updatedb \
     --localpaths=/ \
     --output=$HOME/.cache/locate/system.db \
     --prunepaths='/Volumes /Users/johnw /Network /dev /net /cores /private/var/tmp'
